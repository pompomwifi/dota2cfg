// autoexec = steam/steamapps/common/dota 2 beta/dota/cfg
// launch options = steam library, right click dota 2 and click properties. then launch properties on the first tab
// set launch options: -nod3d9ex -novid -high -dxlevel 81 -noforcemaccel -noforcemspd -useforcedmparms
con_enable 1

engine_no_focus_sleep 0 // don't lose fps when alt-tab out

bind "F8" "exec autoexec.cfg" // executes this config again to have smartcast working every time you start a match
echo "autoexec enabled!"
bind "F11" "toggleconsole"
bind "LEFTARROW" "say_team miss top"
bind "RIGHTARROW" "say_team miss bottom"
bind "DOWNARROW" "say_team miss mid"
bind "UPARROW" "say_team re"

//holding 'y' now creates a ring around yourself which has the exact range of a tower. 
alias "+range" "dota_range_display 950" 
alias "-range" "dota_range_display 0"
bind "y" "+range"

//pressing 'F4' lets the courier grab your stuff from stash brings it to you and if it is a flying courier it uses boost.
alias "quick_courier" "dota_select_courier; dota_ability_execute 2; dota_ability_execute 3; dota_ability_execute 4; +dota_camera_follow" 
bind "F4" "quick_courier"

alias dc disconnect // you can now disconnect by typing "dc" in console

alias rune1 "dota_camera_setpos -2273.898682 1232.745483 982.072876;bind f3 rune2" // Top Rune
alias rune2 "dota_camera_setpos 3035.773438 -2972.680176 966.072937;bind f3 backtome" // Bot Rune
alias backtome "+dota_camera_follow;-dota_camera_follow;+dota_camera_follow;-dota_camera_follow;bind f3 rune1"
bind F3 rune1 // Hit f3 once for top rune, again for bottom, and again to go back to yourself.

